# Declutter the repository
clutter = ['mypy.ini', 'tox.ini', '__pycache__']
# and files starting with '.*'

from distutils.util import strtobool

do = strtobool(
    input(f"Hide clutter files? (y/n) \n")
)

if do:
    import os

    if os.name == 'nt':
        # Windows

        import glob

        clutter += glob.glob('.*')

        for file in clutter:
            os.system("attrib +h " + file)
    else:
        # something else
        with open('.hidden', 'w+') as f:
            f.write(
                "\n".join(clutter)
            )
